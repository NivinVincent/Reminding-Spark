<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.programer.nivin.rmdr.HomePage">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar1"></include>


    <ImageView
        android:id="@+id/home_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/toolbar1"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Spinner
        android:id="@+id/drop_down"
        android:layout_below="@+id/home_image"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spinner_style"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>

    <LinearLayout
        android:id="@+id/birthday_layout"
        android:orientation="vertical"
        android:layout_below="@+id/drop_down"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_style"
            android:hint="Name"
            />

            <Spinner
            android:id="@+id/drop_down_vehicle"
                android:background="@drawable/spinner_style"
                android:visibility="gone"
            android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>


            <TextView
                android:id="@+id/tv_home_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_style"
                android:text="Select the Date"/>


        <Button
            android:id="@+id/btn_home_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@color/btn_color"
            android:text="SUBMIT"
            android:elevation="4dp"

            />

    </LinearLayout>





</RelativeLayout>
